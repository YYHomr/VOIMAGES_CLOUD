<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>Image Viewer</title>
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <style>
    body {
      margin: 0;
      background: #0e0f1a;
      color: white;
      font-family: system-ui;
      display: flex;
      align-items: center;
      justify-content: center;
      height: 100vh;
    }
    .container {
      text-align: center;
      max-width: 90%;
    }
    h1 {
      margin-bottom: 14px;
      opacity: 0.85;
      text-transform: capitalize;
    }
    img {
      max-width: 100%;
      border-radius: 14px;
      box-shadow: 0 20px 50px rgba(0,0,0,0.5);
    }
  </style>
</head>
<body>

<div class="container">
  <h1 id="title"></h1>
  <img id="image" />
</div>

<script>
  const query = window.location.pathname.replace("/", "").trim() || "dog";
  document.getElementById("title").textContent = query;

  fetch(`/.netlify/functions/image?q=${encodeURIComponent(query)}`)
    .then(res => res.json())
    .then(data => {
      if (data.image) {
        document.getElementById("image").src = data.image;
      } else {
        document.getElementById("title").textContent = "No image found";
      }
    })
    .catch(() => {
      document.getElementById("title").textContent = "Error loading image";
    });
</script>

</body>
</html>
